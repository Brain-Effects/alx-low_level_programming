# Makefile for building the 'school' executable

# Compiler to be used
CC := gcc

# Source files
SRC := $(wildcard *.c)

# Name of the executable
EXECUTABLE := school

# Mark 'all' as a phony target
.PHONY: all $(EXECUTABLE)

# The 'all' rule for building the executable
all: $(EXECUTABLE)

$(EXECUTABLE): $(SRC)
	$(CC) $(SRC) -o $(EXECUTABLE)

# Clean the build
clean:
	rm -f $(EXECUTABLE)
